{
  "apps": [
    {
      "name": "NODE-DEV",
      "script": "./src/app.js",
      "exec_mode": "fork",
      "instances": 1,
      "autorestart": true,
      "merge_logs": true,
      "watch": true,
      "ignore_watch": ["node_modules", "logs", ".git"],
      "env": {
        "HOSTNAME": "localhost",
        "PORT": 3333
      },
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "output": "logs/server-output.log",
      "error": "logs/server-error.log"
    },
    {
      "name": "NODE-DEV-2",
      "script": "next-sit-client/standalone/server.js",
      "instances": "max",
      "exec_mode": "cluster",
      "merge_logs": true,
      "env": {
        "HOSTNAME": "localhost",
        "PORT": 3008
      },
      "log_date_format": "YYYY-MM-DD HH:mm Z",
      "output": "logs/server-output.log",
      "error": "logs/server-error.log"
    }
  ]
}
